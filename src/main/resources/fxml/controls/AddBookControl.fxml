<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" prefHeight="120.0" prefWidth="700.0" vgap="5.0" GridPane.rowIndex="2" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
<columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints />
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints />
    <ColumnConstraints />
    <ColumnConstraints />
</columnConstraints>
<rowConstraints>
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
</rowConstraints>

<children>
    <Label text="Barcode:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Language:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ChoiceBox fx:id="languageField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ChoiceBox fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="3" />


    <Label text="Release Date:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <DatePicker fx:id="dateField" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="0" />

    <Label text="Quantity in Stock:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <TextField fx:id="quantityField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <Label text="Retail Price:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <TextField fx:id="priceField" GridPane.columnIndex="3" GridPane.rowIndex="2" />

    <Label text="Book Type:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <ChoiceBox fx:id="typeField" GridPane.columnIndex="3" GridPane.rowIndex="3" />


    <Label fx:id="additionalInfoLbl" GridPane.columnIndex="4" GridPane.rowIndex="0" />
    <ChoiceBox fx:id="conditionField" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="0" />

    <ChoiceBox fx:id="ebookFormatField" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="0" />
    <ChoiceBox fx:id="audiobookFormatField" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="0" />

    <Label fx:id="lengthLbl" text="Length:" visible="false" GridPane.columnIndex="4" GridPane.rowIndex="1" />
    <TextField fx:id="pageCountField" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <TextField fx:id="durationField" visible="false" GridPane.columnIndex="5" GridPane.rowIndex="1" />

    <Button fx:id="addBookBtn" text="Add Book" GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="CENTER" />

    <Label fx:id="validationErrors" textFill="RED" GridPane.columnSpan="6" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

</children>
</GridPane>
